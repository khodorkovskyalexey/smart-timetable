{
  "engines": {
    "node": "v18.12.1"
  },
  "name": "smart-timetable-api",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": false,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/src/main",
    "lint": "eslint \"{src,apps,libs,test,database}/**/*.ts\" --fix",
    "knex": "knex",
    "_smart-knex": "node -r tsconfig-paths/register -r ts-node/register node_modules/.bin/knex",
    "migrate:make": "yarn knex migrate:make -- -x ts",
    "migrate:up": "yarn knex migrate:up",
    "migrate:latest": "yarn knex migrate:latest",
    "migrate:rollback": "yarn knex migrate:rollback",
    "migrate:down": "yarn knex migrate:down",
    "migrate:list": "yarn knex migrate:list",
    "seed:make": "yarn _smart-knex seed:make -- -x ts",
    "seed:run": "yarn _smart-knex seed:run",
    "prepare": "husky install"
  },
  "dependencies": {
    "@fastify/static": "^6.6.0",
    "@nestjs/axios": "^2.0.0",
    "@nestjs/common": "^9.0.0",
    "@nestjs/config": "^2.3.1",
    "@nestjs/core": "^9.0.0",
    "@nestjs/platform-fastify": "^9.2.1",
    "@nestjs/swagger": "^6.1.4",
    "axios": "^1.3.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "dayjs": "^1.11.7",
    "dotenv": "^16.0.3",
    "eslint-config-prettier": "^8.6.0",
    "fastify": "^4.11.0",
    "joi": "^17.7.1",
    "knex": "^2.3.0",
    "lint-staged": "^13.1.2",
    "lodash": "^4.17.21",
    "objection": "^3.0.1",
    "pg": "^8.8.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.3.0",
    "@commitlint/config-conventional": "^17.3.0",
    "@nestjs/cli": "^9.0.0",
    "@nestjs/schematics": "^9.0.0",
    "@types/lodash": "^4.14.191",
    "@types/node": "^16.0.0",
    "@types/pg": "^8.6.6",
    "@types/uuid": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "8.22.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "husky": "^8.0.0",
    "prettier": "^2.3.2",
    "source-map-support": "^0.5.20",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "4.1.0",
    "typescript": "^4.7.4",
    "validate-branch-name": "^1.3.0"
  },
  "importSort": {
    ".js, .ts": {
      "style": "module",
      "parser": "typescript"
    }
  },
  "validate-branch-name": {
    "pattern": "^(feature|fix|chore|hotfix|refactor)/.+$",
    "errorMsg": "Invalid branch name"
  }
}
